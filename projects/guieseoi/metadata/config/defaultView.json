            "label": "Nota mínima (notaMinima)",
            "n_columns":2,
            "group": "avaluacio",
            "props": {
                "required": true,
                "title": "Indiqueu la nota mínima que cal treure"
            }
        },
        "comSerasAvaluatNoCert": {
            "label": "Per cursos no certificats: indiqueu Com seràs avaluat -No Certificat- (comSerasAvaluatNoCert)",
            "n_columns": 12,
            "type": "editableObject",
            "group": "avaluacio",
            "n_rows": 5,
            "props": {
                "data-editable-element": "table",
                "title": "Com seràs avaluat -No Certificat-."
            },
            "config": {
                "actions": {
                    "set_multiple_default_rows": "Definir el nombre d'elements",
                    "remove_rows": "Eliminar els elements seleccionades",
                    "add_default_row_before": "Afegir un element abans de la fila seleccionada"
                },
                "fields": {
                    "nom": {
                        "type": "string"
                    },
                    "ponderacio":{
                        "type": "decimal"
                    }
                },
                "layout": [
                    {
                        "defaultCell": {
                            "width": "5%"
                        },
                        "cells": [
                            {
                                "name": "nom",
                                "field": "nom",
                                "width":"70%",
                                "editable": true
                            },
                            {
                                "name": "ponderació",
                                "field": "ponderacio",
                                "editable": true
                            }
                        ]
                    }
                ]
            }
        },
        "comSerasAvaluatCert": {
            "label": "Per cursos certificats: indiqueu Com seràs avaluat -Certificat- (comSerasAvaluatCert)",
            "n_columns": 12,
            "group": "avaluacio",
            "props": {
                "title": "Com seràs avaluat -Certificat-"
            }
        },
        "calendariNoCert": {
            "label": "Calendari -No Certificat- (calendariNoCert)",
            "n_columns": 12,
            "type": "editableObject",
            "group": "actualitzables",
            "n_rows": 8,
            "props": {
                "data-editable-element": "table",
                "title": "Calendari -No Certificat-."
            },
            "config": {
                "actions": {
                    "add_default_row": "Afegir activitat",
                    "remove_rows": "Eliminar els elements seleccionades",
                    "add_default_row_before": "Afegir un element abans de la fila seleccionada"
                },
                "fields": {                 
                    "bloc": {
                        "type": "number",
                        "mandatory": true,
                        "default": "{#_INC(1)_#}"
                    },
                                
                    "tipusActivitat": {
                        "type": "select",
                        "options": ["lectura", "vídeo", "autoavaluació", "fòrum", "qüestionari", "exercicis", "activitat", "valoració"]
                    },
                    "activitat": {
                        "type": "string",
                        "default": "nom de l'activitat",
                        "mandatory": true
                    },
                    "dataLliurament": {
                        "type": "date",
                        "default":"{#_TODAY()_#}",
                        "mandatory": true
                    },                 
                    "dataQualificacio": {
                        "type": "date",
                        "default":"{#_TODAY()_#}",
                        "mandatory": true
                    },
                    "ponderacioNota": {
                        "type": "number",
                        "default": "0",
                        "mandatory": true
                    }                                            
                },
                "layout": [
                    {
                        "defaultCell": {
                            "width": "5%"
                        },
                        "cells": [
                            {
                                "name": "bloc",
                                "field": "bloc",
                                "width":"5%",
                                "editable": true
                            },
                            {
                                "name": "tipus Activitat",
                                "field": "tipusActivitat",
                                "width":"20%",
                                "editable": true
                            },
                            {
                                "name": "activitat",
                                "field": "activitat",
                                "width":"35%",
                                "editable": true
                            },
                            {
                                "name": "data Lliurament",
                                "field": "dataLliurament",
                                "width":"10%",
                                "editable": true
                            },
                            {
                                "name": "data Qualificacio",
                                "field": "dataQualificacio",
                                "width":"10%",
                                "editable": true
                            },                            
                            {
                                "name": "ponderacio Nota %",
                                "field": "ponderacioNota",
                                "width":"10%",
                                "editable": true
                            }

                        ]
                    }
                ]
            }
        }, 
        "autor": {
            "type": "amd",
            "label": "Autor (autor)",
            "n_columns": 4,
            "group": "authorship",
            "props": {
                "required": true
            },
            "config":{
                "readonly": {"and":[{"class":"ValidationByRoles", "data":{"roles":["responsable"], "deniedResponse":true}}, {"class":"ValidationByGroups", "data":{"groups":["admin"], "deniedResponse":true}}]},
