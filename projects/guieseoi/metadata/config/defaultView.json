    "fields": {
        "codi_modul": {
            "label": "Codi del mòdul (codi_modul)",
            "n_columns": 4,
            "group": "main",
            "props": {
                "required": true,
                "title": "indiqueu el codi del mòdul"
            }
        },
        "modul": {
            "type":"select",
            "n_columns": 4,
            "label": "Mòdul (modul)",
            "group": "main",
            "props": {
                "required": true,
                "title": "indiqueu el nom del mòdul."
            },
            "config":{
                "options":[
                    {"value":"Alemany"},
                    {"value":"Anglès"},
                    {"value":"Català"}
                ]
            }
        },

        "isCert": {
            "type":"checkbox",
            "label": "És Certificat? (isCert)",
            "n_columns": 4,
            "group": "main",
            "props": {
                "required": true,
                "title": "Indiqueu si té prova de Certificació"
            }
        },
        "durada": {
            "label": "Durada (durada)",
            "n_columns": 6,
            "group": "main",
            "props": {
                "required": true,
                "readonly": true,
                "title": "Aquest és un camp calculat. No l'heu d'introduir"
            }
        },
        "nivellcurs": {
            "type":"select",
            "n_columns": 6,
            "label": "Nivell (nivellcurs)",
            "group": "main",
            "props": {
                "required": true,
                "title": "Trieu el nivell"
            },
            "config":{
                "options":[
                    {"value":"A1.1 (1A)"},
                    {"value":"A1.2 (1B)"},
                    {"value":"A2.1 (2A)"},
                    {"value":"A2.2 (2B)"},
                    {"value":"B1.1 (3A)"},
                    {"value":"B1.2 (3B)"},
                    {"value":"B2.1a (4A)"},
                    {"value":"B2.1b (4B)"},
                    {"value":"B2.2a (5A)"},
                    {"value":"B2.2b (5B)"},
                    {"value":"C1"},
                    {"value":"C2"}
                ]
            }
        },
        "duradaHores": {
            "type": "hidden"
        },
        "coordinador": {
            "label": "Coordinador (coordinador)",
            "n_columns": 3,
            "group": "main",
            "props": {
                "required": true,
                "title": "Indiqueu el nom del coordinador"
            }
        },
        "colaboradors": {
            "label": "colaboradors (colaboradors)",
            "n_columns": 3,
            "group": "main",
            "props": {
                "required": true,
                "title": "Si n'hi ha, indiqueu el nom dels col·laboradors."
            }
        },        
        "moodleCourseId": {
            "label": "Identificador del curs a moodle (moodleCourseId)",
            "n_columns": 6,
            "group": "main",
            "props": {
                "required": true,
                "title": "Indiqueu el valor de l'identificador del curs de moodle al que pertany aquesta guia de l'estudiant. Si no hi poseu un valor correcte no es pujaran les dades al calendari."
            }
        },
        "descripcio": {
            "type": "hidden"
        },
        
        "dadesBlocs": {
          "label": "Blocs d'estudi (dadesBlocs)",
          "n_columns": 12,
          "type": "editableObject",
          "group": "main",
          "n_rows": 6,
          "props": {
            "data-editable-element": "table",
            "title": "Detalleu els blocs d'aprenentatge"
          },
          "config": {
            "actions": {
                    "add_default_row": "Afegir bloc",
                    "remove_rows": "Eliminar els blocs seleccionats",
                    "add_default_row_before": "Afegir un bloc abans de la fila seleccionada"
            },
            "fields": {
              "id": {
                "type": "number"                    
              },
              "inici": {
                "type": "date"
              },
              "final": {
                "type": "date",
                "default":"{#_TODAY()_#}"
              },
              "nom": {
                "type": "string"
              }
            },
            "layout": [
              {
                "defaultCell": {
                  "width" : "15%"
                },
                "cells": [
                  {
                    "name": "id",
                    "field": "id",
                    "editable": true
                  },

                  {
                    "name": "inici",
                    "field": "inici",
                    "editable": false
                  },

                  {
                    "name": "final",
                    "field": "final",
                     "width":"55%",
                    "editable": false
                  },

                  {
                    "name": "nom",
                    "field": "nom",
                    "editable": true
                  }
                ]
              }
            ]
          }
        },   
             
        "dataProvaNoCert": {
            "label": "Data prova final(ProvaNoCert)",
            "n_columns": 4,
            "group": "actualitzables",
            "props": {
                "required": true,
                "readonly": true
            }
        },
        "dataProvaCert": {
            "label": "Data de la Certificació(ProvaCert)",
            "n_columns": 4,
            "group": "actualitzables",
            "props": {
                "required": true,
                "readonly": true
            }
        },
        "dataProvaOral": {
            "label": "Data de la prova oral(dataProvaOral)",
            "n_columns": 4,
            "group": "actualitzables",
            "props": {
                "required": true,
                "readonly": false
            }
        },
        "dataCertB2": {
            "type": "hidden"
        },
        "dataCertC1": {
            "type": "hidden"
        },
        "dataCertC2": {
            "type": "hidden"
        },
        "dataCert": {
            "type": "hidden"
        },
  
