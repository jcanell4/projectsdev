                },
                "data": {
                    "ns":"",
                    "buttonLabel": "Cercar",
                    "fieldName": "responsable",
                    "dialogTitle": "Cercar responsable",
                    "dialogButtonLabel": "Afegir responsable",
                    "data": "",
                    "dataQuery": {
                        "filter": ""
                    },
                    "searchDataUrl": "lib/exe/ioc_ajax.php?call=user_list",
                    "fields": {
                        "username": "Nom d'usuari",
                        "name": "Nom"
                    },
                    "fieldId": "username",
                    "defaultEntryField": "name"
                }
            }
        },
        "semestre": {
            "type": "hidden"
        }
    }
