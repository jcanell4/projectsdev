            "n_columns": 12,
            "n_rows": 1,
            "frame": true,
            "config":{
                "collapsable":true,
                "collapsed":false
            }
        },        
        "actualitzables": {
            "parent": "",
            "label": "Dades actualitzables semestralment",
            "n_columns": 12,
            "n_rows": 1,
            "frame": true,
            "config":{
                "collapsable":true,
                "collapsed":false
            }
        },
        "authorship": {
            "parent": "",
            "label": "Autoria",
