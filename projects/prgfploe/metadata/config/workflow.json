{
    "creating": {
        "actions": {
            "view": {
                "permissions": {
                    "groups": [
                        "isadmin",
                        "ismanager"
                     ],
                     "rols": [
                        "responsable",
                        "autor"
                    ]
                },
                "changeStateTo": "creating"
            },
            "edit": {
                "permissions": {
                    "groups": [
                        "isadmin",
                        "ismanager"
                     ],
                     "rols": [
                        "responsable",
                        "autor"
                    ]
                },
                "button": {
                    "id": "editProjectButton",
                    "toSet": {
                        "title": "Edit-WorkFlow",
                        "query": "do=workflow&action=GetProjectMetaData"
                    },
                    "scripts": {
                        "updateHandler": {
                            "conditions": {
                                "page.action": "'project_view'"
                            }
                        }
                    }
                },
                "changeStateTo":"creating"
            },
            "import": {
                "permissions": {
                    "groups": [
                        "isadmin",
                        "ismanager"
                     ],
                     "rols": [
                        "responsable",
                        "autor"
                    ]
                },
                "button": {
                    "class": "WikiIocButton",
                    "parms": { 
                        "DOM": {
                           "id": "importProjectButton",
                           "title": "Importaci√≥ d'un projecte",
                           "class": "iocDisplayBlock"
                        },
                        "DJO": {
                           "autoSize": true,
                           "visible": false,
                           "iconClass": "'iocImportProjectIcon'",
                           "urlBase": "'lib/exe/ioc_ajax.php?call=project'",
                           "projectType": ["ptfct", "ptfploe", "sintesi"],
                           "standbyId": "'bodyContent'",
                           "disableOnSend": true
                        }
                    },
                    "scripts": {
                        "getFunctions": {
                            "path": "importButton.js"
                        },
                        "updateHandler": {
                            "permissions": [
                               "isadmin",
                               "ismanager"
                            ],
                            "rols": [
                               "responsable",
                               "autor"
                            ],
                            "conditions": {
                                "page.action": "'project_view'",
                                "page.isRevision": "false"
                            }
                        }
                    }
                },
                "changeStateTo":"creating"
            }
        }
    }
}
