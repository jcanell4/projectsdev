            "config":{
                "readonly": {
                    "and":[
                        {"class":"ValidationByRoles",
                         "data":{"roles":["responsable"], "deniedResponse":true}},
                        {"class":"ValidationByInfoPerm",
                         "data":{"perm":4, "deniedResponse":true}}
                    ]
                }
            }
        },
        "autor": {
            "label": "Autor (autor)",
            "n_columns": 12,
